<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Стиль для кнопок (адаптивный) -->
    <style name="ModernButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">?attr/cardStrokeColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">?attr/colorSurfaceVariant</item>
    </style>
    <style name="TextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="ErrorButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">?attr/colorOnError</item>
        <item name="backgroundTint">?attr/colorError</item>
        <item name="strokeColor">?attr/colorError</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>