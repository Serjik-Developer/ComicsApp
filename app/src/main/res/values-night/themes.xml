<!-- themes.xml (night) -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Texnostrelka2025otbor" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500_night</item>
        <item name="colorPrimaryContainer">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/surface_night</item>
        <item name="colorOnSurface">@color/on_surface_night</item>
        <item name="colorSurfaceVariant">@color/surface_variant_night</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_night</item>
        <item name="colorError">@color/error_night</item>
        <item name="colorOnError">@color/white</item>
        <item name="cardViewStyle">@style/CardView.Dark</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">@color/card_stroke_night</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/surface_variant_night</item>
    </style>
</resources>